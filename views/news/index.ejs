<!DOCTYPE html>
<html lang="hr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/news.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>
    <%- include('../partials/news_header') %>

        <div class="news-container">
            <h1>Najnovije vijesti</h1>

            <div class="news-grid">
                <% if (news && news.length> 0) { %>
                    <% news.forEach(item=> { %>
                        <article class="news-card <%= item.isHighlighted ? 'highlighted' : '' %>">
                            <% if (item.isHighlighted) { %>
                                <div class="highlight-badge"><i class="fas fa-thumbtack"></i> Istaknuto</div>
                                <% } %>

                                    <% if (item.imageUrl) { %>
                                        <img src="<%= item.imageUrl %>" alt="<%= item.title %>" class="news-image">
                                        <% } else { %>
                                            <img src="https://placehold.co/600x400" alt="Default News Image"
                                                class="news-image">
                                            <% } %>
                                                <div class="news-content">
                                                    <h2 class="news-title">
                                                        <%= item.title %>
                                                    </h2>
                                                    <div class="news-meta">
                                                        <span><i class="far fa-calendar"></i>
                                                            <%= new Date(item.createdAt).toLocaleDateString('hr-HR') %>
                                                        </span>
                                                        <span style="margin-left: 10px;"><i class="far fa-user"></i>
                                                            <%= item.author.name %>
                                                        </span>
                                                    </div>
                                                    <p class="news-excerpt"><%- item.content.replace(/<[^>]*>?/gm,
                                                            '').substring(0, 150) %>...</p>

                                                    <div
                                                        style="margin-top: auto; display: flex; justify-content: space-between; align-items: center;">
                                                        <a href="/news/<%= item._id %>" class="read-more">Pročitaj više
                                                            <i class="fas fa-arrow-right"></i></a>

                                                        <% if (locals.currentUser && locals.currentUser.adminLevel> 0) {
                                                            %>
                                                            <form action="/news/<%= item._id %>/highlight" method="POST"
                                                                style="margin: 0;">
                                                                <button type="submit"
                                                                    class="icon-btn <%= item.isHighlighted ? 'active' : '' %>"
                                                                    title="Prebaci istaknuto">
                                                                    <i class="fas fa-thumbtack"></i>
                                                                </button>
                                                            </form>
                                                            <% } %>
                                                    </div>
                                                </div>
                        </article>
                        <% }); %>
                            <% } else { %>
                                <p>Nema novih vijesti.</p>
                                <% } %>
            </div>
        </div>
</body>

</html>