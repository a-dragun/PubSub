<!DOCTYPE html>
<html lang="hr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/news.css">
</head>

<body>
    <%- include('../partials/news_header') %>
        <%- include('../partials/messaging') %>
            <%- include('../partials/happyHour') %>

                <div class="news-container">
                    <div class="form-container">
                        <h1><i class="fas fa-pen-nib" style="margin-right: 15px;"></i>Objavi novu vijest</h1>

                        <% if (typeof error !=='undefined' ) { %>
                            <div class="error-alert">
                                <i class="fas fa-exclamation-circle"></i>
                                <%= error %>
                            </div>
                            <% } %>

                                <form action="/news/create" method="POST">
                                    <div class="form-group">
                                        <label for="title"><i class="fas fa-heading"
                                                style="margin-right: 8px; color: var(--news-accent);"></i>Naslov</label>
                                        <input type="text" id="title" name="title" class="form-control"
                                            placeholder="Unesite naslov vijesti..." required>
                                    </div>

                                    <div class="form-group">
                                        <label for="category"><i class="fas fa-tags"
                                                style="margin-right: 8px; color: var(--news-accent);"></i>Kategorija</label>
                                        <select id="category" name="category" class="form-control">
                                            <option value="General">Općenito</option>
                                            <option value="Events">Događaji</option>
                                            <option value="Updates">Ažuriranja</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="imageUrl"><i class="fas fa-image"
                                                style="margin-right: 8px; color: var(--news-accent);"></i>URL Slike
                                            (opcionalno)</label>
                                        <input type="url" id="imageUrl" name="imageUrl" class="form-control"
                                            placeholder="https://images.unsplash.com/...">
                                    </div>

                                    <div class="form-group">
                                        <label for="content"><i class="fas fa-align-left"
                                                style="margin-right: 8px; color: var(--news-accent);"></i>Sadržaj</label>
                                        <textarea id="content" name="content" class="form-control" rows="10"
                                            placeholder="Napišite sadržaj vaše vijesti ovdje..." required></textarea>
                                    </div>

                                    <% if (locals.currentUser && locals.currentUser.adminLevel>= 1) { %>
                                        <div class="form-group">
                                            <label class="checkbox-group" for="isHighlighted">
                                                <input type="checkbox" id="isHighlighted" name="isHighlighted">
                                                <span><i class="fas fa-thumbtack"
                                                        style="margin-right: 8px; color: #f1c40f;"></i>Istakni ovu
                                                    vijest (Pinned)</span>
                                            </label>
                                        </div>
                                        <% } %>

                                            <div class="form-actions">
                                                <button type="submit" class="btn-primary btn-submit">
                                                    <i class="fas fa-paper-plane" style="margin-right: 10px;"></i>Objavi
                                                    vijest
                                                </button>
                                            </div>
                                </form>
                    </div>
                </div>
</body>

</html>