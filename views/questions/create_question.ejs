<!DOCTYPE html>
<html lang="en">
<head>
    <title>Create question</title>
</head>
<body>
    <h1>Create a question!</h1>
    <form method="POST" action="/questions/">
        <input type="text" name="text" placeholder="text" required><br>
        <input type="text" name="answer1" placeholder="Answer1" required><br>
        <input type="text" name="answer2" placeholder="Answer2"><br>
        <input type="text" name="answer3" placeholder="Answer3"><br>
        <input type="text" name="answer4" placeholder="Answer4"><br>
        <label for="category">Choose a category:</label><br>
        <select name="category" id="category" required>
            <% categories.forEach(category => { %>
                <option value="<%= category %>"><%= category %></option>
            <% }); %>
        </select>
        <br>
        <input type="text" name="hint" placeholder="Hint"><br>
        <input type="text" name="image" placeholder="Image URL"<br>
        <button type="submit">Submit a question</button>
    </form>
</body>
</html>
